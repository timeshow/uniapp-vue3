# 根配置文件
root = true

# 通用配置
[*]
charset = utf-8                  # 文件编码
indent_style = space             # 使用空格缩进
indent_size = 2                  # 缩进大小为 2 个空格
end_of_line = lf                 # 换行符为 LF（Unix 风格）
trim_trailing_whitespace = true  # 去除行尾空格
insert_final_newline = true      # 文件末尾插入空行

# Markdown 文件配置
[*.md]
trim_trailing_whitespace = false # Markdown 文件不去除行尾空格

# JSON 文件配置
[*.json]
indent_size = 2                  # JSON 文件缩进大小为 2 个空格

# TypeScript 文件配置
[*.ts]
indent_size = 2                  # TypeScript 文件缩进大小为 2 个空格

# Vue 文件配置
[*.vue]
indent_size = 2                  # Vue 文件缩进大小为 2 个空格

# CSS/SCSS 文件配置
[*.{css,scss}]
indent_size = 2                  # CSS/SCSS 文件缩进大小为 2 个空格

# HTML 文件配置
[*.html]
indent_size = 2                  # HTML 文件缩进大小为 2 个空格